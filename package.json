{
	"name": "npm-package-boilerplate",
	"version": "1.0.1",
	"description": "State of the art template for creating NPM packages in TypeScript",
	"keywords": [
		"boilerplate",
		"package",
		"starter",
		"template",
		"typescript",
		"vscode",
		"vitest",
		"changelog",
		"automations"
	],
	"homepage": "https://github.com/tamasangyan/npm-package-boilerplate#readme",
	"bugs": {
		"url": "https://github.com/tamasangyan/npm-package-boilerplate/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tamasangyan/npm-package-boilerplate.git"
	},
	"license": "MIT",
	"author": {
		"name": "Tamas Angyan",
		"email": "tamas@levine.hu",
		"url": "https://github.com/tamasangyan"
	},
	"main": "index.js",
	"scripts": {
		"build": "pnpm clean && tsup",
		"dev": "tsup --watch",
		"preinstall": "lefthook install",
		"prepare": "pnpm build",
		"clean": "rimraf dist",
		"typecheck": "tsc --noEmit",
		"test": "vitest",
		"prepublishOnly": "pnpm build",
		"format": "pnpm exec biome format --write",
		"lint": "pnpm exec biome lint --write",
		"check": "pnpm exec biome check --write",
		"changeset": "pnpm exec changeset",
		"changeset:version": "pnpm exec changeset version"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		}
	},
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"README.md",
		"LICENSE",
		"package.json"
	],
	"packageManager": "^pnpm@10.13.1",
	"dependencies": {
		"lefthook": "^2.0.9",
		"rimraf": "^5.0.10",
		"typescript": "^5.4.5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@changesets/cli": "^2.29.8",
		"@microsoft/api-extractor": "^7.55.2",
		"tsup": "^8.5.1",
		"vitest": "^4.0.15"
	}
}
